{% extends "base.html.jinja" %}

{% block content%}
<div style="height=100vh">
{% if error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-heartbreak-fill"></i> <strong>{{error}}</strong>
            <button type="button" class="btn-close data" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
    <section class="text-dark p-4 text-center">
        <div class="container-fluid mx-auto" style="width: 800px;">
            <div style="font-size: 4em">Download reviews from Filmweb</div>
        </div>
        <div class="container-fluid mx-auto">
            <p style="width: 650px;" class="container lead my-4 text-center">
            Paste the link from Filmweb that leads to the selected movie or series. Check on your own!
            </p>
        <div>
        <form action="/extract" method="POST">
            <div style="justify-content: center;" class="row g-2 align-items-center">
                <div class="col-auto">
                    <label for="movie_url" class="col-form-label">Link:</label>
                </div>
                <div class="col-auto">
                    <input style="min-width:45vw" type="text" id="movie_url" name="movie_url" class="form-control">
                </div>
                <div class="col-auto">
                    <input type="submit" class="btn btn-outline-warning" value="Download">
                </div>
            </div>
        </form>
    </section>
</div>
{% endblock content%}